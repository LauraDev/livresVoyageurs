{# This page inherits from base.html #}
{% extends 'layout.html.twig' %}

{#  Define Title #}
{% block title %} Connexion Administrateur {% endblock %}


{# Define Content #}
{% block content %}


    <div class="row">

        <h1> Connexion Administrateur </h1>

        <div class="col-md-offset-3 col-md-6">
            <!-- Connexion Form -->
            <form id="formAdminConnexion" action="" method="">

                <!-- Pseudo -->
                <div class="form-group">
                    <label for="pseudoAdmin">Pseudo</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input type="text" name="pseudoAdmin" class="form-control" required>
                    </div>
                    <p class="error alert alert-danger">Vous n'avez pas indiqué votre Pseudo</p>
                    <p class="error alert alert-danger">Ce pseudo n'existe pas</p>
                </div>
                <!-- Password -->
                <div class="form-group">
                    <label for="passAdmin">Mot de passe</label>
                    <div class="input-group">
                        <div class="input-group-addon"><span class="ion-android-lock"></span></div>
                        <input type="password" name="passAdmin" class="form-control" required>
                    </div>
                    <p class="error alert alert-danger">Mot de passe incorrect</p>
                    <p class="error alert alert-danger">Vous n'avez pas indiqué votre mot de passe</p>
                </div>
                <!-- Submission -->
                <div class="form-group text-center">
                    <input type="submit" name="btnSub" value="Entrer" id="btnAdminConnexion" class="btn btn-success">
                </div>

            </form>
        </div> <!-- col-md -->
    </div> <!-- row -->

{% endblock %}