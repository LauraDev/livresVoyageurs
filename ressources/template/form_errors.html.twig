{% extends 'form_div_layout.html.twig' %}

{# form_errors.html.twig #}
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}

        <div class="alert alert-danger">
            <p class="text-center">
                {% for error in errors %}
                    {{ error.message }}
                {% endfor %}
            </p>
        </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
