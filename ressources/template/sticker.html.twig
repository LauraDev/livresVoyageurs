{% block sticker %}
    <!DOCTYPE html>
    <html>
        <head>
            <meta charset="utf-8">
            <title>Etiquette</title>
            <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
            <link rel="stylesheet" href="css/style/sticker/sticker.min.css">
        </head>
        <body>
            <h1>
                Les Livres Voyageurs
            </h1>

            <div id="sticker">
                <p>
                    Je ne suis ni perdu, ni oublié...
                    Je suis un livre voyageur. Rendez vous sur
                    <strong>www.livresVoyageurs.com</strong>
                    avec le numéro unique ci-dessous pour indiquer où j'ai fait étape.
                </p>
                <div class="alert alert-info">
                    <p class="text-center">
                        <strong>Numéro unique :
                            {{ uniqueId }}</strong>
                    </p>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <p>
                            Titre:
                            {{ title }}
                        </p>
                        <p>
                            Libéré le:
                            {{ 'now' | date("d/m/Y") }}
                        </p>
                    </div>
                    <!-- <div class="col-xs-4">
                        <img src="images/logo.png" alt="logo livres Voyageurs" class="img img-responsive img-thumbnail">
                    </div> -->
                </div>
            </div>

        </body>
    </html>
{% endblock %}
