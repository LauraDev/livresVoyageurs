{# This page inherits from base.html #}
{% extends 'base.html.twig' %}

{# Define Style/Script block #}
{% block stylesheets %}

  <!-- Ionicons -->
  <link href='http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css' rel='stylesheet' type='text/css'>
  <!-- Icomoon Icon Fonts-->
  <link rel="stylesheet" href="{{ asset('assets/css/icomoon.css') }}">
  <!-- Animate.css -->
  <link rel="stylesheet" href="{{ asset('assets/css/animate.css') }}">
  <!-- Flexslider -->
  <link rel="stylesheet" href="{{ asset('assets/css/flexslider.css') }}">
  <!-- Bootstrap  -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <!-- Main CSS (SCSS Compile) -->
  <link rel="stylesheet" id="theme-switch" href="{{ asset('assets/css/style/style.css') }}">
{% endblock %}

{# Javascripts block --> #}
{% block javascripts %}

  <!-- jQuery -->
  <script   src="https://code.jquery.com/jquery-3.2.1.min.js"   integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="   crossorigin="anonymous"></script>
  <!-- jQuery Cookie -->
  <script src="{{ asset('assets/js/jquery.cookie.js') }}"></script>
  <script>
    if ($.cookie('styleCookie') === 'style-light.css') {
      $('html, body').css('background', '#eeeeee');
    } else if ($.cookie('styleCookie') === 'style.css') {
      $('html, body').css('background', '#222222');
    }
  </script>
  <!-- jQuery Easing -->
  <script src="{{ asset('assets/js/jquery.easing.1.3.js') }}"></script>
  <!-- Bootstrap -->
  <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
  <!-- Waypoints -->
  <script src="{{ asset('assets/js/jquery.waypoints.min.js') }}"></script>
  <!-- Flexslider -->
  <script src="{{ asset('assets/js/jquery.flexslider-min.js') }}"></script>

  <!-- Viewport Units Buggyfill -->
  <script src="{{ asset('assets/js/viewport-units-buggyfill.js') }}"></script>

  <!-- Googgle Map -->
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCefOgb1ZWqYtj7raVSmN4PL2WkTrc-KyA&libraries=places"></script>
  
  <!-- Main JS  -->
  <script src="{{ asset('assets/js/scripts/main.js') }}"></script>
  <!-- Forms JS -->
  <script src="{{ asset('assets/js/forms.js') }}"></script>

  <!-- Modernizr JS -->
  <script src="{{ asset('assets/js/modernizr-2.6.2.min.js') }}"></script>
  <!-- FOR IE9 below -->
  <!--[if lt IE 9]> <script src="{{ asset('assets/js/respond.min.js') }}"></script> <![endif]-->

{% endblock %}
