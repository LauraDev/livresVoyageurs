	<head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{% block seodescription '' %}" />
        <meta name="keywords" content="livres voyageurs, partage de livres, communaute de partage, recyclage de livres, donner ses livres" />
        <meta name="author" content="LOIC GALLAY ET LAURA TRAORE" />
        <title>{% block title '' %} - Les Livres Voyageurs</title>

        <!-- CSS & JS Block -->
        {% block stylesheets %}{% endblock %}
		<!-- Javascripts block -->
		{% block javascripts %}{% endblock %}
	</head>

	<body>
		<!-- Loader -->
		<div class="loader"></div>

		<div class="page">

			<!-- Menu using HttpFragmentServiceProvider -->
			{{ render(controller('LivresVoyageurs\\Controller\\UserController::menu', {'active_page' : active_page})) }}
			<!-- 2nd Menu using HttpFragmentServiceProvider -->
			{{ render(controller('LivresVoyageurs\\Controller\\UserController::secondMenu', {'active_page' : active_page})) }}

			<div class="container">

				<!-- Content Block -->
				{% block content %}{% endblock %}

			</div>

				<!-- Include Footer -->
			{% include 'inc/footer.html' %}


		</div>
	</body>
</html>
